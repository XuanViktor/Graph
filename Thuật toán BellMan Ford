#include <bits/stdc++.h>
using namespace std;

struct edge{
    int x, y, w;
};

int n,m;
vector<edge> dscanh;
int d[100005];

void nhap(){
    cin >> n >> m;
    for (int i = 0; i < m; i++){
        int x, y, w; cin >> x >> y >> w;
        dscanh.push_back({x,y,w});
    }
}

void BellMan_Ford(int s){
    // Cho tất cả khoảng cách các đỉnh là vô cùng
    for (int i = 1; i <= n; i++) d[i] = 1e9;
    // Cho đỉnh bắt đầu có chi phí là 0
    d[s] = 0;

    // Lập n - 1 lần
    // Lập tất cả các cạnh
    for (int i = 0; i < n - 1; i++){
        for (int j = 0; j < m; j++){
            edge tmp = dscanh[j];
            int x = tmp.x, y = tmp.y, w = tmp.w;
            if (d[x] < 1e9){
                d[y] = min(d[y], d[x] + w);
            }
        }
    }
    for (int i = 1; i <= n; i++){
        cout << d[i] << ' ';
    }
}

int main(){
    nhap();
    BellMan_Ford(1);
}

7 10
1 2 1
1 5 4
2 5 2
2 3 2
5 4 7
3 4 8
3 6 4
3 7 2
4 7 5
7 6 1
